

<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head"); -%>
</head>
<body class=" blue-grey darken-4" >
    <header>
        
        <nav>
            <%- include("./partials/reg-menu"); -%>
            <%- include("./partials/mobile-menu"); -%>
         
       
     </nav>
     <section class="">
        <form action="/repair/search" method="get">
            <input class="search_input" type="text" name="searchPhrase" placeholder="Search for Fault code / issue">
            <button class="search_button" type="submit">Search</button>
        </form>
    </section>
    </header>
	
		<section class=" row ">  

            Repair ID:<%= repair._id %>
            <section class=" card "> 
                <section class="">
                    <!-- title -->
                    <h2 class="center-text" ><%= repair.title %></h2>
                    <span></span>
                    
                </section>
                
                <section class="center-text rounded ">
                    <h3 class="title search-tags">Search Tags: </h3>
                    <span class="center"><%= repair.searchtags %></span>
                    
                </section>
                
                <section class="center-text rounded">
                    <h3 class="title center board-type">Board Type: </h3> 
                    <span class="center"><%= repair.boardType %></span> 
                    
                </section>
                
                <section class=" center-text rounded repair-info">
                    <h3 class="title center ">Engine Make: </h3>
                    <span class="center"><%= repair.engineMake %></span>
                </section>
                
            </section> 
                
            <ol class="procedure-list" data-currentProcId="1">   
                
                <% for (let i= 0 ; repair.procedureArr.length > i ; i++){ %>

                    
                    <li class="  blue-grey rounded procedure-item small-padding">
                        <section>
                            <!-- images list -->
                            <ol class="image-list horz-flex center" data-totalfiles="0" data-uploadId="0">
                                <% for (let a= 0 ; repair.procedureArr[i].images.length > a ; a++){ %>
                                    <li class=" image-item card blue-grey ">
                                        
                                        <a class="image-link " href="<%= repair.procedureArr[i].images[a] %>">

                                            <%if (repair.procedureArr[i].thumbs){%>
                                                <img class="image-preview" src=" <%= repair.procedureArr[i].thumbs[a]%>" alt="repair image" class="rounded img-mini">
                                               
                                                <%}else{%>
                                                    <img src=" <%= repair.procedureArr[i].images[a]%>" alt="repair image" class="rounded img-mini">
                                                <%}%>
                                           
                                        </a>
                                    </li>
                                <% } %>
                            </ol>
                        </section>
                        <!-- description -->
                        <section class="card instructions small-padding">
                           <%= repair.procedureArr[i].instructions %>
                        </section> 
                    </li>
                <% } %>



                

            </ol>
                
                
                <!-- submit the repair form to server -->
                <!-- <button class="clickable" type="submit">Submit Repair</button> -->

            <!-- </form> -->
           
        </section>


       
        <footer>			
			
		</footer>
        <%- include("./partials/scripts"); -%>
</body>
</html>




