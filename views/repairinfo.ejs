

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Repair Information  </title>
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
  
</head>
<body>
    
	
		<section class="repair-page">  

            Repair ID:<%= repair._id %>
            <section> 
                <section class="repair-info">
                    <!-- title -->
                    <h2 class="title" ><%= repair.title %></h2>
                    <span></span>
                    
                </section>
                
                <section class="repair-info">
                    <h3 class="search-tags">Search Tags: </h3>
                    <span><%= repair.searchtags %></span>
                    
                </section>
                
                <section class="repair-info">
                    <h3 class="board-type">Board Type: </h3> 
                    <span><%= repair.boardType %></span> 
                    
                </section>
                
                <section class="repair-info">
                    <h3 class="">Engine Make: </h3>
                    <span><%= repair.engineMake %></span>
                </section>
                
            </section> 
                
            <ol class="procedure-list" data-currentProcId="1">   
                
                <% for (let i= 0 ; repair.procedureArr.length > i ; i++){ %>

                    
                    <li class="procedure-item small-padding">
                        <section>
                            <!-- images list -->
                            <ol class="image-list center" data-totalfiles="0" data-uploadId="0">
                                <% for (let a= 0 ; repair.procedureArr[i].images.length > a ; a++){ %>
                                    <li class="repair-img small-padding ">
                                        
                                        <a class="image-link center" href="<%= repair.procedureArr[i].images[a] %>">

                                            <%if (repair.procedureArr[i].thumbs){%>
                                                <img src=" <%= repair.procedureArr[i].thumbs[a]%>" alt="repair image" class="img-mini">
                                               
                                                <%}else{%>
                                                    <img src=" <%= repair.procedureArr[i].images[a]%>" alt="repair image" class="img-mini">
                                                <%}%>
                                           
                                        </a>
                                        <h6>click to view full image</h6>
                                       
                                    </li>
                                <% } %>
                            </ol>
                        </section>
                        <!-- descriptiong -->
                        <section class="instructions small-padding">
                           <%= repair.procedureArr[i].instructions %>
                        </section> 
                    </li>
                <% } %>



                

            </ol>
                
                
                <!-- submit the repair form to server -->
                <!-- <button class="clickable" type="submit">Submit Repair</button> -->

            <!-- </form> -->
           
        </section>


        <section id="formdata">

        </section>

        <footer>			
			<nav>
				<section id="menu" class="hidden-menu">
					<details >
						<summary> MENU</summary> 
					<a class="button clickable" href="/">
						<span>Search</span>
					</a>
					<a class="button clickable" href="/ecm-logs">
						<span> ECM LOG <br> +</span>
					</a>
					<!-- <a class="button clickable" href="#">
						<span> Repair <br> Search</span>
					</a> -->
				</details>
				
				</section>
			</nav>
		</footer>
       
</body>
</html>




