

<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head"); -%>
</head>
<body>
    <header>
        <section class="">
            <h1 class="title">Repair info</h1>
            <form action="/repair/search" method="get">
                <input class="search_input" type="text" name="searchPhrase" placeholder="Search for Fault code / issue">
                <button class="search_button" type="submit">Search</button>
            </form>
        </section>
        <nav>
            <%- include("./partials/reg-menu"); -%>
            <%- include("./partials/mobile-menu"); -%>
         
       
     </nav>
        
    </header>
	
		<section class=" content repair-page">  

            Repair ID:<%= repair._id %>
            <section> 
                <section class=" rounded repair-info">
                    <!-- title -->
                    <h2 class="center title" ><%= repair.title %></h2>
                    <span></span>
                    
                </section>
                
                <section class=" rounded repair-info">
                    <h3 class="title center search-tags">Search Tags: </h3>
                    <span class="center"><%= repair.searchtags %></span>
                    
                </section>
                
                <section class=" rounded repair-info">
                    <h3 class="title center board-type">Board Type: </h3> 
                    <span class="center"><%= repair.boardType %></span> 
                    
                </section>
                
                <section class="rounded repair-info">
                    <h3 class="title center ">Engine Make: </h3>
                    <span class="center"><%= repair.engineMake %></span>
                </section>
                
            </section> 
                
            <ol class="procedure-list" data-currentProcId="1">   
                
                <% for (let i= 0 ; repair.procedureArr.length > i ; i++){ %>

                    
                    <li class="rounded procedure-item small-padding">
                        <section>
                            <!-- images list -->
                            <ol class="image-list center" data-totalfiles="0" data-uploadId="0">
                                <% for (let a= 0 ; repair.procedureArr[i].images.length > a ; a++){ %>
                                    <li class="repair-img rounded small-padding ">
                                        
                                        <a class="image-link center" href="<%= repair.procedureArr[i].images[a] %>">

                                            <%if (repair.procedureArr[i].thumbs){%>
                                                <img src=" <%= repair.procedureArr[i].thumbs[a]%>" alt="repair image" class="rounded img-mini">
                                               
                                                <%}else{%>
                                                    <img src=" <%= repair.procedureArr[i].images[a]%>" alt="repair image" class="rounded img-mini">
                                                <%}%>
                                           
                                        </a>
                                        <h6>click to view full image</h6>
                                       
                                    </li>
                                <% } %>
                            </ol>
                        </section>
                        <!-- descriptiong -->
                        <section class="instructions small-padding">
                           <%= repair.procedureArr[i].instructions %>
                        </section> 
                    </li>
                <% } %>



                

            </ol>
                
                
                <!-- submit the repair form to server -->
                <!-- <button class="clickable" type="submit">Submit Repair</button> -->

            <!-- </form> -->
           
        </section>


       
        <footer>			
			
		</footer>
        <%- include("./partials/scripts"); -%>
</body>
</html>




