                        <div class="input-field">
                            <input type="text" id="title" name="title">
                            <label for="title">Tittle</label>
                        </div>
                    </div>
        </main>


        <section id="formdata">

        </section>

        <footer>			
			
		</footer>
        <script type="text/javascript" src="./js/repairformclient.js"></script>
        <%- include("./partials/scripts"); -%>
        
</body>
</html>