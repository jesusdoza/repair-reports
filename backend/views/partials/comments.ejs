<section class="w-11/12 p-2 rounded-sm bg-slate-400">
    <!-- comment submit form -->
    <section class="">
        <form id="comment_form" class="p-3 bg-slate-600 rounded-lg" method="post" action="/comments/<%= repair._id %>">
            <h3 class="text-left">Wanna add something to this repair let <%=createdBy %> know. </h3>
            <div class="text-center bg-white">
                <div class="flex gap-2">
                    <label class="text-gray-800 font-bold" for="comment-title">Title
                    </label>
                    <input required
                        class="text-black textarea font-bold bg-white border-solid border-2 border-sky-300 w-full"
                        type="text" name="title" id="comment-title"></input>

                </div>

                <textarea required id="comment-input" name="comment" placeholder="Comment here"
                    class="text-black bg-white textarea border-solid border-2 border-sky-300 w-full"></textarea>
            </div>
            <div>
                <input id="comment_submit" class="btn" type="submit">

            </div>
        </form>

    </section>

    <!-- display comments section -->
    <section class="p-2 h-auto border-double">
        <ol>
            <% if (locals.comments) { %>
                <% for( let index=0; index < comments.length; index++ ) { %>
                    <li class="my-2">
                        <div class="card w-96 bg-gray-500 shadow-xl">
                            <div class="card-body">
                                <h2 class="card-title text-black">
                                    <%= comments[index].title%>
                                </h2>
                                <p class="text-slate-800 whitespace-pre-line">
                                    <%= comments[index].content %>
                                </p>
                                <div class="flex justify-end">
                                    <section class="h-5/6">
                                        <div class="w-20 bg-sky-500 hover:bg-sky-700">
                                            <a href="/userinfo/<%= comments[index].userid ? comments[index].userid : 0 %>"
                                                class="">
                                                <img class="w-full" src="/images/no-image.png" alt="user avatar">
                                                <div class="text-center">
                                                    <span class="text-center">
                                                        <%= comments[index].username ? comments[index].username
                                                            : 'Anonymous' %>
                                                    </span>

                                                </div>
                                            </a>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        </div>
                    </li>
                    <% } %>


                        <% } %>


        </ol>
    </section>
</section>